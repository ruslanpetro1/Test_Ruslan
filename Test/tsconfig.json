{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "es6"],
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": [
      "./src/**/*"    // Переконайтеся, що це відповідає фактичному шляху до ваших файлів
    ],
    "exclude": [
      "./dist"        // Виключаємо директорію dist з компіляції
    ]
  }  